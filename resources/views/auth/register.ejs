<section class="login flex justify-center items-center pt-15">
  <div class="bg-white py-6 px-8 rounded ">
    <form action="">
      <div class="mb-6">
        <label for="name" class="font-bold mt-4">Name</label> <br />
        <input
          type="text"
          placeholder="Enter your name"
          name="name"
          class="rounded-md py-2 pl-2 pr-24 shadow border"
        />
      </div>
      <div class="mb-6">
        <label for="email" class="font-bold mt-4">Email</label> <br />
        <input
          type="text"
          placeholder="Enter your email"
          name="email"
          class="rounded-md py-2 pl-2 pr-24 shadow border"
        />
      </div>
      <div class="mb-6">
        <label for="password" class="font-bold mt-4">Password</label> <br />
        <input
          type="password"
          placeholder="Password"
          name="password"
          class="rounded-md py-2 pl-2 pr-24 shadow border"
        />
      </div>
      <div class="flex items-center justify-between">
        <button class="btn-primary rounded-full py-2 px-4 text-white">
          Register
        </button>
        <a href="/login" class="inline-block font-bold">Already have account</a>
      </div>
    </form>
  </div>
</section>
