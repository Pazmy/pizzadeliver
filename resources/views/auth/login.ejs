<section class="login flex justify-center items-center pt-15">
  <div class="bg-white py-6 px-8 rounded ">
    <form action="/login" method="POST">
      <% if(messages.error) { %>
      <span class="text-red-500 text-sm"><%= messages.error %> </span>
      <% } %>
      <div class="mb-6">
        <label for="email" class="font-bold mt-4">Email</label> <br />
        <input
          type="text"
          placeholder="Enter your email"
          name="email"
          class="rounded-md py-2 pl-2 pr-24 shadow border"
        />
      </div>
      <div class="mb-6">
        <label for="password" class="font-bold mt-4">Password</label> <br />
        <input
          type="password"
          placeholder="Password"
          name="password"
          class="rounded-md py-2 pl-2 pr-24 shadow border"
        />
      </div>
      <div class="flex items-center justify-between">
        <button
          type="submit"
          class="btn-primary rounded-full py-2 px-4 text-white"
        >
          Log In
        </button>
        <a href="/register" class="inline-block font-bold"
          >Don't have account</a
        >
      </div>
    </form>
  </div>
</section>
